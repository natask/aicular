# Google AI API Configuration
# Get your API key from: https://ai.google.dev/
GOOGLE_AI_API_KEY=your_gemini_api_key_here
NEXT_PUBLIC_GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=AIcular
NEXT_PUBLIC_APP_VERSION=1.0.0

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PWA_NAME=AIcular Blind Assistant
NEXT_PUBLIC_PWA_DESCRIPTION=AI-powered assistant for the blind

# Audio Configuration
NEXT_PUBLIC_AUDIO_SAMPLE_RATE=16000
NEXT_PUBLIC_AUDIO_CHANNELS=1
NEXT_PUBLIC_AUDIO_BIT_DEPTH=16
NEXT_PUBLIC_AUDIO_CHUNK_SIZE=1000

# Gemini Live API Configuration
NEXT_PUBLIC_GEMINI_MODEL=gemini-2.5-flash-preview-native-audio-dialog
NEXT_PUBLIC_GEMINI_MAX_RECONNECT_ATTEMPTS=3
NEXT_PUBLIC_GEMINI_RECONNECT_DELAY=1000
NEXT_PUBLIC_GEMINI_INACTIVITY_TIMEOUT=300000

# Accessibility Configuration
NEXT_PUBLIC_HIGH_CONTRAST_ENABLED=false
NEXT_PUBLIC_LARGE_TEXT_ENABLED=false
NEXT_PUBLIC_SOUND_EFFECTS_ENABLED=true
NEXT_PUBLIC_HAPTIC_FEEDBACK_ENABLED=true
NEXT_PUBLIC_AUTO_READ_ENABLED=true
